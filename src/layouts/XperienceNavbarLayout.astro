---
interface Props {
  url: string;
}

const { url } = Astro.props;
---

<div class="h-full  flex flex-col">
  <nav class="h-16">
    <ul class="mt-2.5 flex p-1 justify-evenly">
      <li>
        <a href="../xperience/mdevz" class=`${url === 'mdevz' ? 'active' : ''}`
          >Mdevz</a
        >
      </li>
      <li>
        <a href="../xperience/fyo" class=`${url === 'fyo' ? 'active' : ''}`
          >FyO</a
        >
      </li>
      <li>
        <a
          href="../xperience/rolling"
          class=`${url === 'rolling' ? 'active' : ''}`>Rolling</a
        >
      </li>
    </ul>
  </nav>
  <section class="h-full">
    <slot />
  </section>
</div>

<style>
  li {
    font-size: 1rem;
  }
  .active {
    border-bottom: 1px solid white;
    border-radius: 10px 10px 0px 0px;
    padding: 0.5rem;
  }

  .active::before {
    content: "üåè";
  }
 
</style>
