---
import XperienceLayout from "../layouts/XperienceLayout.astro";
import XperienceNavbarLayout from "../layouts/XperienceNavbarLayout.astro";
---

<XperienceLayout>
  <XperienceNavbarLayout url="xperience">
    <div class="h-full flex justify-center items-center">
      <div class="w-3/4 text-white flex flex-col">
        <span class="text-2xl text-center">Welcome to my xperiences. 🤓</span>
        <span class="text-lg">
          ⬅️ To look inside them you should click on the cards of the left side.
        </span>
        <span class="text-lg">
          Or you can click the mini-navbar on the top 🔝</span
        >
      </div>
    </div>
  </XperienceNavbarLayout>
</XperienceLayout>

 
